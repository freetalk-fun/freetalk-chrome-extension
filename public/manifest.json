{
  "manifest_version": 3,
  "name": "FreeTalk Dictionary",
  "version": "1.0.0",
  "description": "Double-click any word to get its definition.",
  "icons": {
    "16": "favicon32.png",
    "48": "favicon48.png",
    "128": "favicon128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "./static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./static/js/content.js", "popup.js"]
    }
  ],
  "permissions": [ "storage"],
  "host_permissions": ["https://dictionary.freetalk.fun/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
